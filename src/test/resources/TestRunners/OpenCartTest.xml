<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Regression Suite" thread-count="4" parallel="tests"
	verbose="4">
	<test name="HomePage Test">

		<parameter name="url" value="https://naveenautomationlabs.com/opencart/index.php?route=common/home" />
		<parameter name="browser" value="Edge" />
		<classes>
			<class name="testngassignment.HomePageTest" />
		</classes>
	</test>

	<test name="Login Test">
		<parameter name="url" value="https://naveenautomationlabs.com/opencart/index.php?route=account/login" />
		<parameter name="browser" value="Firefox" />
		<classes>
			<class name="testngassignment.LoginTest" />
		</classes>
	</test>

	<test name="Registration Test">
		<parameter name="url"
			value="https://naveenautomationlabs.com/opencart/index.php?route=account/register" />
		<parameter name="browser"
			value="edge" />
		<classes>
			<class name="testngassignment.RegistrationPageTest" />
		</classes>
	</test>

	<test name="ForgottenPassword Test">
		<parameter name="url"
			value="https://naveenautomationlabs.com/opencart/index.php?route=account/forgotten" />
		<parameter name="browser"
			value="firefox" />
		<classes>
			<class name="testngassignment.ForgottenPasswordTest" />
		</classes>
	</test>

</suite>